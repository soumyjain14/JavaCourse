package for_loops;
import java.util.*;
public class prime {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		int n=scan.nextInt();
		int c=scan.nextInt();
		int sum=0;
		int product=1;
		int i=1;
		if(c==1)
		{
			while(i<=n)
			{
				sum=sum+i;
				
			}
			System.out.println(sum);
			
		}
		else if(c==2)
		{
			while(i<=n)
			{
				product=product*i;
			}
			System.out.println(sum);
		}else {
			System.out.println("-1");
		}
 
	}
}
