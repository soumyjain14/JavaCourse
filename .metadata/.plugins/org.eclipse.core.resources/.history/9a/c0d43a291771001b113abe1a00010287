package classes_and_objects;

public class Polynomial1 {
	int degree;
	int coeff;

	int coefficient[]=new int[100];

	public void setCoefficient(int degree, int coeff) {
		coefficient[degree]+=coeff;
	}
	
	public void add1(Polynomial p1) {
		if(this.degree==p1.degree) {
			for(int i=0;i<100;i++) {
				this.coefficient[degree]+=p1.coefficient[degree];
			}
		}
		
	}

	public void print1() {
		for(int i=0;i<100;i++) {
			if(coefficient[i]!=0) {
				System.out.print(coefficient[i]+"x"+i+" ");
			}
		}
		System.out.println();
	}

}
