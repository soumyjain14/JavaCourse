package for_loops;

import java.util.Scanner;

public class reverse {

	public static void main(String[] args) {
		Scanner scan=new Scanner(System.in);
		int n=scan.nextInt();
		int i=1;int j=1;int var=0;
		while(n>0)
		{
			j=n%2;
			n=n/2;
			var=j;
			System.out.print(j);
			
			
			
		}
		
	
	}

}
