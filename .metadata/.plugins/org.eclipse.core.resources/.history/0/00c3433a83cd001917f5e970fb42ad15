package for_loops;
import java.util.*;

public class for_loop1 {

	public static void main(String[] args) {
		Scanner scan=new Scanner(System.in);
		int n=scan.nextInt();
		int sum=0;
		int i=1;
		int t1=0;int t2=1;
		while(i<=n)
		{
			sum=sum+t1+t2;
			t1=t2;
			t2++;
		}
		System.out.println(sum);
	}

}
